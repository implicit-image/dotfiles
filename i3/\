bar {
    status_command i3status
    mode dock
    position top
    font "pango:Iosevka 12"
    hidden_state hide
    modifier none
    separator_symbol " | "
    workspace_min_width 45
    strip_workspace_numbers yes
    colors {
        background #181818
        #                 border  backgr.  text
        focused_workspace #f1f1f1 #f1f1f1 #151515
        inactive_workspace #181818 #181818 #f1f1f1
    }

}


